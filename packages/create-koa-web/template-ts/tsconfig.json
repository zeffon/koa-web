{
  "compilerOptions": {
    "target": "ES6",
    "strict": true,
    "module": "commonjs",
    "lib": [],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "build",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_module", "build"]
}
