{
  "name": "template-koa",
  "private": true,
  "version": "0.0.0",
  "description": "The best scaffolding of building Koa2 restful API with TypeScript.",
  "engines": {
    "node": ">=12.2.0"
  },
  "scripts": {
    "format": "prettier --write .",
    "dev": "nodemon",
    "prod": "set NODE_ENV=production&&nodemon",
    "test": "set NODE_ENV=test&&jest --coverage --detectOpenHandles --forceExit",
    "build": "tsc && tsc-alias"
  },
  "dependencies": {
    "@types/node-cache": "^4.2.5",
    "axios": "^0.27.2",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-router": "^10.1.1",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "log4js": "^6.4.1",
    "mysql2": "^2.3.3",
    "node-cache": "^5.1.2",
    "redis": "3.0.2",
    "sequelize": "^6.17.0",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/koa2-cors": "^2.0.2",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.11.12",
    "@types/redis": "2.8.28",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.7.1",
    "jest": "^27.5.1",
    "koa-swagger-decorator": "^1.8.5",
    "lint-staged": "^12.3.3",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "tsc-alias": "^1.6.7",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
