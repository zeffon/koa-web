{
  "name": "koa-web",
  "version": "0.1.0",
  "description": "The best scaffolding of building Koa2 restful API with TypeScript.",
  "main": "./src/app.ts",
  "scripts": {
    "dev:tsc": "tsc -W",
    "dev:nodemon": "nodemon build/app.js dev",
    "start": "tsc && concurrently npm:dev:*",
    "prod": "set NODE_ENV=production&&concurrently npm:start&& node build/app.js",
    "lint": "prettier --write \"./src/**/*.ts\"",
    "test": "set NODE_ENV=test&&jest --coverage",
    "build": "tsc && concurrently npm:dev:*"
  },
  "dependencies": {
    "async": "^3.2.3",
    "glob": "^7.2.0",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-router": "^10.1.1",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "log4js": "^6.4.1",
    "mysql2": "^2.3.3",
    "redis": "3.0.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/async": "^3.2.12",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.0",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/koa2-cors": "^2.0.2",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.11.12",
    "@types/redis": "2.8.28",
    "@types/require-directory": "^2.1.2",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.7.1",
    "commitlint-config-cz": "^0.13.3",
    "concurrently": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "koa-swagger-decorator": "^1.8.4",
    "lint-staged": "^12.3.3",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  }
}
