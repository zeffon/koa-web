{
  "name": "koa-web-monorepo",
  "private": true,
  "engines": {
    "node": ">=12.2.0"
  },
  "author": "Zeffon Wu",
  "license": "MIT",
  "keywords": [
    "koa2",
    "koa-typescript",
    "koa-demo",
    "koa-start",
    "koa-ts"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write --cache .",
    "dev": "pnpm -r --parallel --filter='./packages/create-koa-web/*' run dev",
    "build": "pnpm -r --filter='./packages/create-koa-web/*' run build",
    "cov": "pnpm -r --filter='./packages/create-koa-web/*' run cov",
    "release": "tsx scripts/release.ts",
    "ci-publish": "tsx scripts/publishCI.ts"
  },
  "devDependencies": {
    "@types/node": "^18.14.6",
    "@types/prompts": "^2.4.2",
    "@types/semver": "^7.3.13",
    "conventional-changelog-cli": "^2.2.2",
    "execa": "^7.0.0",
    "lint-staged": "^13.1.2",
    "picocolors": "^1.0.0",
    "prettier": "2.8.4",
    "prompts": "^2.4.2",
    "semver": "^7.3.8",
    "simple-git-hooks": "^2.8.1",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ],
    "playground/**/__tests__/**/*.ts": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@7.27.1",
  "pnpm": {
    "overrides": {
      "koa-web": "workspace:*"
    }
  }
}