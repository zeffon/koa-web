{
  "private": true,
  "name": "koa-web",
  "version": "0.1.0",
  "description": "The best scaffolding of building Koa2 restful API with TypeScript.",
  "author": "Zeffon <ZeffonWu@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeffon/koa-web.git"
  },
  "keywords": [
    "koa2",
    "typescript",
    "koa-demo",
    "koa-start",
    "koa-ts"
  ],
  "engines": {
    "node": ">=12.2.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write .",
    "dev:tsc": "tsc -W",
    "dev:nodemon": "nodemon build/app.js dev",
    "start": "tsc && concurrently npm:dev:*",
    "prod": "set NODE_ENV=production&&concurrently npm:start&& node build/app.js",
    "test": "set NODE_ENV=test&&jest",
    "cov": "jest --coverage --detectOpenHandles --forceExit",
    "build": "tsc --build",
    "release": "ts-node scripts/release.ts",
    "ci-publish": "ts-node scripts/publishCI.ts"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.12",
    "@types/prompts": "^2.0.14",
    "@types/semver": "^7.3.9",
    "concurrently": "^7.0.0",
    "execa": "^5.1.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.3",
    "nodemon": "^2.0.15",
    "picocolors": "^1.0.0",
    "prettier": "2.5.1",
    "prompts": "^2.4.2",
    "semver": "^7.3.5",
    "simple-git-hooks": "^2.7.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec ts-node scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "packageManager": "pnpm@6.30.0",
  "pnpm": {
    "overrides": {
      "koa-web": "workspace:*"
    }
  }
}
