{
  "private": true,
  "name": "koa-web",
  "version": "0.1.0",
  "description": "The best scaffolding of building Koa2 restful API with TypeScript.",
  "author": "Zeffon <ZeffonWu@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zeffon/koa-web.git"
  },
  "keywords": [
    "koa2",
    "typescript",
    "koa-demo",
    "koa-start",
    "koa-ts"
  ],
  "engines": {
    "node": ">=12.2.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "format": "prettier --write .",
    "dev:tsc": "tsc -W",
    "dev:nodemon": "nodemon build/app.js dev",
    "start": "tsc && concurrently npm:dev:*",
    "prod": "set NODE_ENV=production&&concurrently npm:start&& node build/app.js",
    "test": "set NODE_ENV=test&&jest",
    "cov": "jest --coverage --detectOpenHandles --forceExit",
    "build": "tsc --build",
    "ci-publish": "ts-node scripts/publishCI.ts"
  },
  "dependencies": {
    "async": "^3.2.3",
    "koa": "^2.13.4",
    "koa-body": "^4.2.0",
    "koa-router": "^10.1.1",
    "koa2-cors": "^2.0.6",
    "lodash": "^4.17.21",
    "log4js": "^6.4.1",
    "mysql2": "^2.3.3",
    "redis": "3.0.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/async": "^3.2.12",
    "@types/jest": "^27.4.0",
    "@types/koa": "^2.13.4",
    "@types/koa-router": "^7.4.4",
    "@types/koa2-cors": "^2.0.2",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.11.12",
    "@types/redis": "2.8.28",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.7.1",
    "concurrently": "^7.0.0",
    "jest": "^27.5.1",
    "koa-swagger-decorator": "^1.8.5",
    "lint-staged": "^12.3.3",
    "nodemon": "^2.0.15",
    "picocolors": "^1.0.0",
    "prettier": "2.5.1",
    "simple-git-hooks": "^2.7.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec ts-node scripts/verifyCommit.ts $1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "packageManager": "pnpm@6.30.0",
  "pnpm": {
    "overrides": {
      "koa-web": "workspace:*"
    }
  }
}
